{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./lib",
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "./ref",
    "lib": [
      "dom",
      "es2017",
      "es2016",
      "es2015"
    ],
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals":true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
