{
  "name": "grimoirejs-fundamental",
  "version": "0.4.2",
  "description": "Base components,converters and nodes for Web3D with Grimoire.js",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "src",
    "lib",
    "lib-es5"
  ],
  "keywords": [
    "grimoire"
  ],
  "dependencies": {
    "@types/json5": "0.0.29",
    "babel-cli": "^6.18.0",
    "browserify": "^13.1.1",
    "events": "^1.1.1",
    "grimoirejs": "0.9.*",
    "grimoirejs-cauldron": "^1.5.8",
    "grimoirejs-math": "^1.2.3",
    "json5": "^0.5.0",
    "typescript": "beta"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "grimoirejs-cauldron": "^1.5.10",
    "grimoirejs-inquisitor": "^1.0.3",
    "xmldom": "^0.1.22"
  },
  "repository": "",
  "grimoire": {
    "isPlugin": true,
    "ts": {
      "lib": "./lib",
      "temp": "./lib-ts",
      "src": "./src",
      "es5": "./lib-es5"
    },
    "main": "index.ts",
    "test": {
      "defaultGlob": "**/*Test.js",
      "src": "./test",
      "temp": "./lib-test"
    },
    "out": {
      "es6": "./product/grimoire.es2016.js",
      "es5": "./product/grimoire.js"
    },
    "txt-exts": [
      ".txt",
      ".html",
      ".goml",
      ".sort",
      ".glsl"
    ],
    "doc": {
      "src": "./doc",
      "header": "./doc/header.md",
      "footer": "./doc/footer.md",
      "dest": "./README.md"
    },
    "namespace": "HTTP://GRIMOIRE.GL/NS/DEFAULT"
  },
  "scripts": {
    "start": "cauldron build --watch --server",
    "build": "cauldron build",
    "test": "inquisitor",
    "prepublish": "cauldron build --babelSeparated && npm run doc",
    "doc": "cauldron doc",
    "scaffold": "cauldron scaffold"
  },
  "license": "MIT"
}
