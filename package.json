{
  "name": "grimoirejs-fundamental",
  "version": "0.22.0-beta2",
  "description": "Base components,converters and nodes for Web3D with Grimoire.js",
  "main": "./ref/index.js",
  "typings": "./ref/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/GrimoireGL/grimoirejs-fundamental.git"
  },
  "files": [
    "src",
    "ref",
    "register"
  ],
  "keywords": [
    "grimoire",
    "grimoirejs",
    "shading"
  ],
  "dependencies": {
    "@types/node": "^8.0.6"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "condition-circle": "^1.5.0",
    "geckodriver": "^1.7.1",
    "grimoirejs": "^0.19.1",
    "grimoirejs-cauldron": "^3.1.5",
    "grimoirejs-math": "^1.14.0",
    "http-server": "^0.10.0",
    "nightwatch": "^0.9.16",
    "raw-loader": "^0.5.1",
    "regenerator-runtime": "^0.10.5",
    "selenium-server-standalone-jar": "^3.4.0",
    "semantic-release": "^6.3.2",
    "sinon": "^2.3.6",
    "ts-loader": "^2.2.1",
    "typedoc": "^0.7.0",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "xmldom": "^0.1.27",
    "yargs": "^8.0.2"
  },
  "peerDependencies": {
    "grimoirejs": "latest",
    "grimoirejs-math": "latest"
  },
  "scripts": {
    "prepublish": "npm run build -- --env.prod",
    "start": "webpack --watch --progress",
    "test": "tsc --outDir ./lib && babel ./lib --presets es2015 --plugins transform-runtime --out-dir ./lib-es5 && babel ./test --presets es2015 --plugins transform-runtime --out-dir ./test-es5 && ava ./test-es5/**/*Test.js --verbose ",
    "bundle": "webpack --progress --watch",
    "build": "webpack --progress",
    "generate-expose": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "generate-reference": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "hs": "http-server",
    "e2e-test": "nightwatch --env circleci",
    "doc": "typedoc --out ./docs/ --options typedoc.json  ./tsconfig.json"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}
