{
  "name": "grimoirejs-fundamental",
  "version": "0.38.0-beta24",
  "description": "Base components,converters and nodes for Web3D with Grimoire.js",
  "main": "./ref/index.js",
  "typings": "./ref/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/GrimoireGL/grimoirejs-fundamental.git"
  },
  "files": [
    "src",
    "ref",
    "register"
  ],
  "keywords": [
    "grimoire",
    "grimoirejs",
    "webgl"
  ],
  "dependencies": {
    "@types/sinon": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^9.4.6",
    "@types/xmldom": "^0.1.29",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "condition-circle": "^2.0.1",
    "cpx": "^1.5.0",
    "deflate-js": "^0.2.3",
    "grimoirejs": "^1.0.9-beta37",
    "grimoirejs-cauldron": "^4.2.0-beta3",
    "grimoirejs-math": "beta",
    "http-server": "^0.10.0",
    "jsdom": "^11.5.1",
    "nyc": "^11.4.1",
    "raw-loader": "^0.5.1",
    "regenerator-runtime": "^0.11.1",
    "semantic-release": "^12.4.1",
    "sinon": "^4.3.0",
    "trash-cli": "^1.4.0",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "typedoc": "^0.10.0",
    "typescript": "^2.7.2",
    "watch": "^1.0.2",
    "webpack": "^3.11.0",
    "xmldom": "^0.1.27",
    "xmlserializer": "^0.6.1",
    "yargs": "^11.0.0"
  },
  "peerDependencies": {
    "grimoirejs": "latest",
    "grimoirejs-math": "latest"
  },
  "scripts": {
    "coverage": "trash coverage && nyc --reporter=lcov --reporter=text --reporter=json --reporter=html npm run test",
    "prepare": "npm run build -- --env.prod",
    "debug": "node ./common/debug.js",
    "lint": "tslint -c tslint.json ./src/**/*.ts --project ./ --type-check --exclude ./src/index.ts",
    "lint:fix": "tslint -c tslint.json ./src/**/*.ts --project ./ --type-check --exclude ./src/index.ts --fix",
    "start": "webpack --watch --progress",
    "bundle": "webpack --progress --watch",
    "build": "webpack --progress",
    "generate-expose": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "generate-reference": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "doc": "node ./common/doc-timestamp.js && typedoc --out ./docs/ --options ./common/typedoc.json  ./tsconfig.json",
    "test": "trash test-lib && tsc -p tsconfig.test.json && cpx \"test/_TestResource/**/*.sort\" test-lib/_TestResource && ava ./test-lib/**/*Test.js --verbose --serial"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "ava": {
    "failWithoutAssertions": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
