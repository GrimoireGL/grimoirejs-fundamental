@Pass
@DepthFunc(LEQUAL)
@CullFace(BACK)
attribute vec3 position;

@vert{
   uniform mat4 _matPVM;
   void main(){
      gl_Position = _matPVM * vec4(position,1);
   }
}

@frag{
  @{type:"color", default:"pink"}
  uniform vec4 color;

  uniform float _time;

  void main(){
     gl_FragColor = color;
     gl_FragColor.rgb *=vec3(sin(_time / 100.),cos(_time / 100. + 50.),sin(_time / 100. + 100.));
  }
}
