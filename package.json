{
  "name": "grimoirejs-fundamental",
  "version": "0.30.0beta5",
  "description": "Base components,converters and nodes for Web3D with Grimoire.js",
  "main": "./ref/index.js",
  "typings": "./ref/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/GrimoireGL/grimoirejs-fundamental.git"
  },
  "files": [
    "src",
    "ref",
    "register"
  ],
  "keywords": [
    "grimoire",
    "grimoirejs",
    "webgl"
  ],
  "dependencies": {
    "@types/node": "^8.0.24"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "condition-circle": "^1.5.0",
    "geckodriver": "1.8.1",
    "grimoirejs": "^0.19.5",
    "grimoirejs-cauldron": "^3.1.5",
    "grimoirejs-math": "^1.14.5",
    "http-server": "^0.10.0",
    "nightwatch": "^0.9.16",
    "raw-loader": "^0.5.1",
    "regenerator-runtime": "^0.11.0",
    "selenium-server-standalone-jar": "^3.5.0",
    "semantic-release": "^7.0.2",
    "sinon": "^3.2.1",
    "ts-loader": "^3.0.2",
    "tslint": "^5.7.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.2",
    "watch": "^1.0.2",
    "webpack": "^3.5.5",
    "xmldom": "^0.1.27",
    "yargs": "^8.0.2"
  },
  "peerDependencies": {
    "grimoirejs": "latest",
    "grimoirejs-math": "latest"
  },
  "scripts": {
    "prepublish": "npm run build -- --env.prod",
    "lint": "tslint --project ./ --type-check --exclude ./src/index.ts",
    "lint:fix": "tslint --project ./ --fix --type-check --exclude ./src/index.ts",
    "start": "webpack --watch --progress",
    "test": "tsc --outDir ./lib && babel ./lib --presets es2015 --plugins transform-runtime --out-dir ./lib-es5 && babel ./test --presets es2015 --plugins transform-runtime --out-dir ./test-es5 && ava ./test-es5/**/*Test.js --verbose ",
    "bundle": "webpack --progress --watch",
    "build": "webpack --progress",
    "generate-expose": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "generate-reference": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "hs": "http-server",
    "e2e-test": "find ./node_modules/selenium-server-standalone-jar/jar/ -name selenium-server-standalone*.jar -exec mv {} ./node_modules/selenium-server-standalone-jar/jar/selenium.jar \\; && nightwatch --env circleci",
    "doc": "node ./doc-timestamp.js && typedoc --out ./docs/ --options typedoc.json  ./tsconfig.json"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}